<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.yschi.castscreen.HomePage"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <GridLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:rowCount="2"
        android:columnWidth="646dp"
        android:columnCount="2"
        android:id="@+id/GridLayout1">

    <ImageButton
        android:layout_height="260dp"
        android:layout_width="190dp"
        android:id="@+id/img1"
        android:background="@drawable/ecvertical"
        android:onClick="startEcommerce"/>

        <ImageButton
            android:id="@+id/img4"
            android:layout_width="190dp"
            android:layout_height="253dp"
            android:background="@drawable/eduvertical"
            android:onClick="startEducation" />

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="190dp"
            android:layout_height="260dp"
            android:background="@drawable/smvertical"
            android:onClick="startScreenMirroring" />

        <ImageButton
            android:id="@+id/img3"
            android:layout_width="190dp"
            android:layout_height="253dp"
            android:background="@drawable/vcvertical"
            android:onClick="startVideocal" />


    </GridLayout>

    <ToggleButton


        android:id="@+id/toggleButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/mic_btn_red"
        android:text=""
        android:textOff=""
        android:textOn=""
        tools:layout_editor_absoluteX="476dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>